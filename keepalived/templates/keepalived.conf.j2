vrrp_script check_httpd {
  script "killall -0 httpd"
  interval 2
  weight 2
}

vrrp_instance VI_1 {
  state MASTER
  interface {{ keepalived_interface }}
  virtual_router_id {{ keepalived_router_id }}
  priority {{ keepalived_prio }}
  advert_int 1
  authentication {
    auth_type PASS
    auth_pass {{ keepalived_pass }}
  }
  virtual_ipaddress {
    {{ keepalived_vip }}
  }
  track_script {
    check_httpd
  }
}
